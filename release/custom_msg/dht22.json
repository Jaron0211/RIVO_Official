{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "dht22",
    "title": "DHT22 Sensor Data",
    "endpoint": "/api/v1/robots/{robot_id}/dht22",
    "method": "POST",
    "description": "Temperature and humidity data from DHT22 sensor",
    "type": "object",
    "required": [
        "temperature",
        "humidity"
    ],
    "properties": {
        "temperature": {
            "type": "number",
            "description": "Temperature in Celsius",
            "example": 24.5
        },
        "humidity": {
            "type": "number",
            "description": "Relative humidity percentage",
            "example": 60.2
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-23T10:00:00Z"
        }
    },
    "example": {
        "temperature": 24.5,
        "humidity": 60.2,
        "timestamp": "2025-11-23T10:00:00Z"
    }
}
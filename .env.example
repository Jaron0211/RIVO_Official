# Server Configuration
KAIROIO_SERVER_HOST=0.0.0.0
KAIROIO_SERVER_PORT=8080

# Database Configuration
KAIROIO_DATABASE_TYPE=postgres
KAIROIO_DATABASE_DSN=postgres://user:password@localhost:5432/kairoio?sslmode=disable

# Email Configuration (Gmail example)
KAIROIO_EMAIL_SMTP_HOST=smtp.gmail.com
KAIROIO_EMAIL_SMTP_PORT=587
KAIROIO_EMAIL_USERNAME=your-email@gmail.com
KAIROIO_EMAIL_PASSWORD=your-app-password
KAIROIO_EMAIL_FROM_ADDRESS=your-email@gmail.com

# Authentication
KAIROIO_AUTH_TOKEN_TTL=24h
KAIROIO_AUTH_PASSWORD_COST=12

# Logging
KAIROIO_LOGGING_LEVEL=info
KAIROIO_LOGGING_FORMAT=json
